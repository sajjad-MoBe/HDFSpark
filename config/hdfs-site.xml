<configuration>
    <property>
        <name>dfs.nameservices</name>
        <value>main-hdfs-cluster</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.main-hdfs-cluster</name>
        <value>namenode1,namenode2</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.main-hdfs-cluster.namenode1</name>
        <value>namenode1:9000</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.main-hdfs-cluster.namenode1</name>
        <value>namenode1:9870</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.main-hdfs-cluster.namenode2</name>
        <value>namenode2:9000</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.main-hdfs-cluster.namenode2</name>
        <value>namenode2:9870</value>
    </property>
    <property>
        <name>dfs.namenode.shared.edits.dir</name>
        <value>qjournal://journalnode:8485/main-hdfs-cluster</value>
    </property>
    <property>
        <name>dfs.client.failover.proxy.provider.main-hdfs-cluster</name>
        <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
    </property>
    <property>
        <name>dfs.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>/hadoop/dfs/journal</value>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
    </property>
